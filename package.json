{
  "private": true,
  "repository": "https://github.com/apparebit/siteforge",
  "author": "Robert Grimm (https://apparebit.com)",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=12.10.0"
  },
  "browserslist": [
    "> 1%",
    "not dead"
  ],
  "devDependencies": {
    "@grr/async": "0.1.0",
    "@grr/builder": "0.1.0",
    "@grr/fs": "0.1.0",
    "@grr/glob": "0.1.0",
    "@grr/html": "0.1.0",
    "@grr/inventory": "0.1.0",
    "@grr/loader": "0.1.0",
    "@grr/metrics": "0.1.0",
    "@grr/oddjob": "0.1.0",
    "@grr/options": "0.1.0",
    "@grr/proact": "0.1.0",
    "@grr/rollcall": "0.1.0",
    "@grr/run": "0.1.0",
    "@grr/schemata": "0.1.0",
    "@grr/sequitur": "0.1.0",
    "@grr/siteforge": "0.1.0",
    "@grr/walk": "0.1.0",
    "babel-eslint": "10.1.0",
    "c8": "7.1.2",
    "eslint": "7.0.0",
    "eslint-config-prettier": "6.11.0",
    "open": "7.0.3",
    "prettier": "2.0.5",
    "tap": "14.10.7"
  },
  "resolutions": {
    "minimist": "1.2.5"
  },
  "scripts": {
    "coverage": "c8 report && open coverage/index.html",
    "test": "NODE_ENV=test NODE_V8_COVERAGE=.coverage node test/index.js"
  },
  "workspaces": [
    "cli",
    "packages/*"
  ],
  "c8": {
    "exclude": [
      "test",
      "./node_modules"
    ],
    "temp-directory": "./.coverage",
    "reporter": "html"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "proseWrap": "always"
  }
}
