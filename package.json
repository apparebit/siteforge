{
  "name": "@grr/siteforge",
  "version": "0.1.0",
  "description": "Yet another static website generator",
  "repository": "https://github.com/apparebit/siteforge",
  "author": "Robert Grimm (https://apparebit.com)",
  "license": "MIT",
  "type": "module",
  "main": "./siteforge.js",
  "engines": {
    "node": ">=12.10.0"
  },
  "engineStrict": true,
  "browserslist": [
    "> 1%",
    "not dead"
  ],
  "devDependencies": {
    "babel-eslint": "10.0.3",
    "c8": "6.0.1",
    "eslint": "6.7.0",
    "eslint-config-prettier": "6.7.0",
    "open": "7.0.0",
    "prettier": "1.19.1",
    "tap": "14.10.1"
  },
  "dependencies": {
    "@babel/core": "7.7.4",
    "babel-preset-minify": "0.5.1",
    "cssnano": "4.1.10",
    "postcss": "7.0.23",
    "vnu-jar": "19.9.4"
  },
  "scripts": {
    "coverage": "c8 report && open coverage/index.html",
    "test": "NODE_V8_COVERAGE=.coverage node test/index.js"
  },
  "c8": {
    "exclude": [
      "test",
      "./node_modules"
    ],
    "temp-directory": "./.coverage",
    "reporter": "html"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "proseWrap": "always"
  }
}
