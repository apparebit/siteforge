{
  "private": true,
  "repository": "https://github.com/apparebit/siteforge",
  "author": "Robert Grimm (https://apparebit.com)",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=12.10.0"
  },
  "browserslist": [
    "> 1%",
    "not dead"
  ],
  "devDependencies": {
    "babel-eslint": "10.0.3",
    "c8": "6.0.1",
    "eslint": "6.7.2",
    "eslint-config-prettier": "6.7.0",
    "open": "7.0.0",
    "prettier": "1.19.1",
    "tap": "14.10.2"
  },
  "scripts": {
    "coverage": "c8 report && open coverage/index.html",
    "test": "NODE_V8_COVERAGE=.coverage node test/index.js"
  },
  "workspaces": ["source", "packages/*"],
  "c8": {
    "exclude": [
      "test",
      "./node_modules"
    ],
    "temp-directory": "./.coverage",
    "reporter": "html"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "proseWrap": "always"
  }
}
